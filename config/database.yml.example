# Mysql configurations
default: &default
  host: localhost
  adapter: mysql2
  username: root
  password: password
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000

development:
  <<: *default
  database: mlambe_api
test:
  <<: *default
  database: mlambe_api_test

production:
  <<: *default
  database: mlambe_api_production


